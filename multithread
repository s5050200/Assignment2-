// run 2URL
    private final Stack urlStack = new Stack();
    
    private void buttonpageActionPerformed(java.awt.event.ActionEvent evt) {                                           
       
        MyThread url1 = new MyThread (urla.getText(), "Thread1");
        MyThread url2 = new MyThread(urlb.getText(), "Thread2");
        url1.start();
        url2.start();
    
     
        
    }                                          
//run header
    public void ShowHeader(String URL, String Thread) {
        String url = URL;
        String thread = Thread;
        try {

            URL obj = new URL(url);
            URLConnection conn = obj.openConnection();
            Map<String, List<String>> map = conn.getHeaderFields();
             jEditorPaneH.setText( jEditorPaneH.getText() + thread + " :\n");

            for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                 jEditorPaneH.setText( jEditorPaneH.getText() + "Key : " + entry.getKey() + " ,Value : " + entry.getValue() + "\n");
            }
             jEditorPaneH.setText( jEditorPaneH.getText() + "\nGet HTTP Header For : " + thread + "\n");
            String server = conn.getHeaderField("Server");

            if (server == null) {
                 jEditorPaneH.setText( jEditorPaneH.getText() + "'Server' is not found!\n");
            } else {
                 jEditorPaneH.setText( jEditorPaneH.getText() + "Server : " + server + "\n");
            }
             jEditorPaneH.setText( jEditorPaneH.getText() + "Done\n________________________\n");
        } catch (Exception e) {
             e.printStackTrace();
        }
    }
    
    public class MyThread extends Thread {

        String link, thrNo;
        int delay = 5000;

        public MyThread(String url, String no) {
            link = url;
            thrNo = no;
        }


        /**
         *
         */
                @Override
        public void run() {
                //show web    
            try {
                jEditorPaneT.setText(jEditorPaneT.getText() + " : Start Get URL\n");

                if (thrNo.equals("Thread1")) {
                    urlStack.push(urla.getText());
                    jEditorPaneAraeA.setPage(link);                   
                     jEditorPaneAraeA = new JEditorPane();
		jEditorPaneAraeA.setEditable(false);
		jEditorPaneAraeA.addHyperlinkListener(new HyperlinkListener()
		{
                        @Override
			public void hyperlinkUpdate(HyperlinkEvent event)
			{
				if(event.getEventType() == HyperlinkEvent.EventType.ACTIVATED)
				{
					try
					{
						urlStack.push(event.getURL().toString());
						urla.setText(event.getURL().toString());
                                                
						jEditorPaneAraeA.setPage(event.getURL());
					}
					catch(IOException e)
					{
						jEditorPaneAraeA.setText("Error: " + e);
					}
				}
			}
		});
    
                }
                if (thrNo.equals("Thread2")) {
                    urlStack.push(urlb.getText());
                    jEditorPaneAraeB.setPage(link);
  
                jEditorPaneAraeB = new JEditorPane();
		jEditorPaneAraeB.setEditable(false);
		jEditorPaneAraeB.addHyperlinkListener(new HyperlinkListener()
		{
                        @Override
			public void hyperlinkUpdate(HyperlinkEvent event)
			{
				if(event.getEventType() == HyperlinkEvent.EventType.ACTIVATED)
				{
					try
					{
						urlStack.push(event.getURL().toString());
						urlb.setText(event.getURL().toString());
                                                
						jEditorPaneAraeB.setPage(event.getURL());
					}
					catch(IOException e)
					{
						jEditorPaneAraeB.setText("Error: " + e);
					}
				}
			}
		});
                }
//run thread 
                jEditorPaneT.setText(jEditorPaneT.getText() + thrNo + " : start\n");

                jEditorPaneT.setText(jEditorPaneT.getText() + thrNo + " : Print Header\n");

                ShowHeader(link, thrNo);

                jEditorPaneT.setText(jEditorPaneT.getText() + thrNo + " : Finish\n");
            } catch (IOException e) {       
                System.out.print("error");
            
            }
        }
    }
    
     
   
    
